<html>
<head>
  <meta charset="UTF-8">
  <meta name="generator" content="<%= Pluto.banner %>">

  <title><%= site['title'] %></title>

  <link rel="stylesheet" type="text/css" href="news.css">

</head>
<body>
<h1><%= site['title'] %></h1>

<p>
  [icon] Switch to full view /
  [icon] Switch to compact view
  
  Updated  <%= Time.now.strftime('%A, %d. %B %Y %H:%M') %>
</p>

<style>
   body {
        font:  Arial, sans-serif;
        color: #333;
   }
 
  div.section,
  div.header,
  div.item,
  {
     margin: 0;
     padding: 0;
  }
 
 .item-title {
   font-size: 12px;
  }
 
 .item-published {
   font-size: 12px;
  color: #777;
 }
 
 .item-time-ago-in-words {
   font-size: 12px;
   color: #777;
 }
 
</style>


<div>
<% last_published_at = Time.local( 1999, 1, 1 )
   Item.latest.limit(24).each do |item| %>

 <% unless last_published_at.year   == item.published_at.year  &&
           last_published_at.month  == item.published_at.month &&
           last_published_at.day    == item.published_at.day      %>
     
     
  <!--           
<h3>
  <%= item.published_at.strftime('%A, %d. %B %Y') %>
</h3>
   -->
<% end %><!-- if new day? -->

<div class='section'>
<div class='header' style='width: 800px;'>
  <table width='100%'>
   <tr>
     <td>
        <div style='width: 50px'>{}</div>
     </td><!-- icon/logo -->
     <td style='white-space: nowrap;'>
       <span class='item-title'>
         <a href='<%= item.feed.url %>'>
           <%= item.feed.title %>
         </a>
        (
         <a href=''>Feed</a>
        )
       </span>
     </td><!-- feed title -->
     <td width='100%'>  <!-- note: width is a suggestion; will get smaller to fill space-->
          <hr>
     </td><!-- filler -->
     <td style='white-space: nowrap;'>
       <span class='item-published'><%= item.published_at %></span>
     </td><!-- item published -->
   </tr>
  </table>
</div>

<div class='item'>

<table width='100%'>
  <tr>
    <td>
                <div style='width: 50px; max-width: 50px;'></div>  
    </td><!-- icon/logo; dummy for space -->
    <td>
        <h2 class='item_title'>
          <a href='<%= item.url %>'><%= item.title %></a>
        </h2>
    </td>
  </tr>
  <tr>
    <td>
                <div style='width: 50px; max-width: 50px;'></div>  
    </td><!-- icon/logo; dummy for space -->
    <td>
        <div class='item_content'>
         <%= item.summary %>
        </div>
        <p class='item-time-ago-in-words'>
          <%= time_ago_in_words( item.published_at ) %>
        </p>
    </td>
  </tr>
</table>

</div>  <!-- item -->


</div><!-- section -->


<% last_published_at = item.published_at
   end %><!-- each item -->

</div>

</body>
</html>
